<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 15dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <!-- Shadow Color -->
            <solid android:color="@color/errorScreenButtonShadowColor" />
            <corners android:radius="7dp" />

        </shape>
    </item>

    <!-- Top color -->
    <item android:bottom="8px">

        <shape  android:shape="rectangle">
            <padding android:bottom="10dp"
                android:top="10dp"
                android:left="20dp"
                android:right="20dp"/>

            <!-- TOP Color -->
            <stroke android:color="@color/errorScreenButtonShadowColor" android:width="1dp" />
            <solid android:color="@color/errorScreenButtonColor" />
            <corners android:radius="7dp" />
        </shape>

    </item>

</layer-list>